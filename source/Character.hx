				animation.addByPrefix('run', 'Its Mine', 24, false);

				addOffset('idle');
				addOffset("singUP", 29, 66);
				addOffset("singRIGHT", 12, -52);
				addOffset("singLEFT", 18, 12);
				addOffset("singDOWN", 61, -72);
				addOffset("run", 55, 3);

				playAnim('idle');

			case 'troy-bed':
				tex = Paths.getSparrowAtlas('characters/trBed');
				frames = tex;
				animation.addByPrefix('idle', 'troyidle', 24, false);
				animation.addByPrefix('singUP', 'troyup', 24, false);
				animation.addByPrefix('singRIGHT', 'troyright', 24, false);
				animation.addByPrefix('singDOWN', 'troydown', 24, false);
				animation.addByPrefix('singLEFT', 'troyleft', 24, false);
				animation.addByPrefix('scary', 'troyscary', 24, false);

				addOffset('idle');
				addOffset("singUP", -3, 54);
				addOffset("singRIGHT", -3, 4);
				addOffset("singLEFT", 11, 23);
				addOffset("singDOWN", -3, -17);
				addOffset("scary", -1, 4);

				playAnim('idle');

			case 'devduo':
				tex = Paths.getSparrowAtlas('characters/twogods');
				frames = tex;
				animation.addByPrefix('idle', 'twogodsIDLE', 24, false);

				animation.addByPrefix('singUP', 'twogodsUP', 24, false);
				animation.addByPrefix('singRIGHT', 'twogodsRIGHT', 24, false);
				animation.addByPrefix('singDOWN', 'twogodsDOWN', 24, false);
				animation.addByPrefix('singLEFT', 'twogodsLEFT', 24, false);

				animation.addByPrefix('singUP-alt', 'twogodsLEANUP', 24, false);
				animation.addByPrefix('singDOWN-alt', 'twogodsLEANDOWN', 24, false);
				animation.addByPrefix('singLEFT-alt', 'twogodsLEANLEFT', 24, false);
				animation.addByPrefix('singRIGHT-alt', 'twogodsLEANRIGHT', 24, false);

				addOffset('idle');
				addOffset("singUP", 10, 71);
				addOffset("singRIGHT", -34, 0);
				addOffset("singLEFT", 68, 2);
				addOffset("singDOWN", 9, -28);
				addOffset("singUP-alt", 49, 92);
